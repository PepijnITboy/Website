<section class="landing-section" id="recepten">
  <div class="landing-reveal">
    <p class="landing-eyebrow">{{ section.settings.eyebrow }}</p>
    <h2 class="landing-title">{{ section.settings.heading }}</h2>
    <p class="landing-subtitle">{{ section.settings.subheading }}</p>
  </div>

  <div class="landing-grid landing-grid--3" style="margin-top: 40px;">
    {%- for block in section.blocks -%}
      <div class="landing-card landing-reveal" {{ block.shopify_attributes }}>
        <h3 style="margin-bottom: 10px;">{{ block.settings.title }}</h3>
        <p style="color: rgba(255,255,255,0.68);">{{ block.settings.body }}</p>
      </div>
    {%- endfor -%}
  </div>
</section>

{% schema %}
{
  "name": "Use-cases",
  "tag": "section",
  "settings": [
    { "type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "Wat kun je ermee?" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Shots. Mixes. Rituals." },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Drink ijskoud, mix met tonic, of serveer als ritual shot." }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Use-case",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "After dinner" },
        { "type": "text", "id": "body", "label": "Body", "default": "Gember, citrus en een subtiele alcoholische twist." }
      ]
    }
  ],
  "presets": [
    {
      "name": "Use-cases",
      "blocks": [
        { "type": "item" },
        { "type": "item" },
        { "type": "item" }
      ]
    }
  ]
}
{% endschema %}
