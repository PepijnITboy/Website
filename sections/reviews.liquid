<section class="landing-section" id="reviews">
  <div class="landing-reveal">
    <p class="landing-eyebrow">{{ section.settings.eyebrow }}</p>
    <h2 class="landing-title">{{ section.settings.heading }}</h2>
    <p class="landing-subtitle">{{ section.settings.subheading }}</p>
  </div>

  <div class="landing-grid landing-grid--3" style="margin-top: 40px;">
    {%- for block in section.blocks -%}
      <div class="landing-card landing-reveal" {{ block.shopify_attributes }}>
        <p style="font-size: 1.05rem; margin-bottom: 14px;">“{{ block.settings.quote }}”</p>
        <p style="color: rgba(255,255,255,0.6);">— {{ block.settings.name }}</p>
      </div>
    {%- endfor -%}
  </div>
</section>

{% schema %}
{
  "name": "Reviews",
  "tag": "section",
  "settings": [
    { "type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "Reviews" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Loved by night owls" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Korte, eerlijke reacties van onze community." }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        { "type": "text", "id": "quote", "label": "Quote", "default": "Eindelijk een gembershot met klasse." },
        { "type": "text", "id": "name", "label": "Naam", "default": "Sanne" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reviews",
      "blocks": [
        { "type": "review" },
        { "type": "review" },
        { "type": "review" }
      ]
    }
  ]
}
{% endschema %}
