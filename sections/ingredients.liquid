<section class="landing-section" id="ingredienten">
  <div class="landing-reveal">
    <p class="landing-eyebrow">{{ section.settings.eyebrow }}</p>
    <h2 class="landing-title">{{ section.settings.heading }}</h2>
    <p class="landing-subtitle">{{ section.settings.subheading }}</p>
  </div>

  <div class="landing-grid landing-grid--3" style="margin-top: 40px;">
    {%- for block in section.blocks -%}
      <div class="landing-card landing-reveal" {{ block.shopify_attributes }}>
        <h3 style="margin-bottom: 10px;">{{ block.settings.title }}</h3>
        <p style="color: rgba(255,255,255,0.68);">{{ block.settings.body }}</p>
      </div>
    {%- endfor -%}
  </div>
</section>

{% schema %}
{
  "name": "Ingrediënten",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Ingrediënten"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Pure smaken. Geen ruis."
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Vers geperst, zorgvuldig geblend en koud geserveerd."
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Ingredient",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Verse gember" },
        { "type": "text", "id": "body", "label": "Body", "default": "Intense kick met natuurlijke energie." }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ingrediënten",
      "blocks": [
        { "type": "item" },
        { "type": "item" },
        { "type": "item" }
      ]
    }
  ]
}
{% endschema %}
